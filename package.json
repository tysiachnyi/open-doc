{
  "name": "open-doc",
  "version": "1.0.0",
  "description": "Open Source application for documentation",
  "main": "index.js",
  "author": "Nik Tysiachnyi",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "app/*"
  ],
  "scripts": {
    "install:all": "yarn --cwd app/api install && yarn --cwd app/website install",
    "dev:website": "yarn --cwd app/website dev",
    "dev:api": "yarn --cwd app/api start",
    "dev": "concurrently 'npm -prefix app/website run dev' 'npm -prefix app/api run dev'"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "concurrently": "^8.0.1"
  }
}
